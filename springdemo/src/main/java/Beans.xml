<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" default-init-method="init" default-autowire="byType">

   <bean id = "helloWorld" class = "de.limago.springdemo.HelloWorld" scope="singleton" destroy-method="destroy" autowire="constructor">
      <property name = "message" value = "Hello World!"/>
      
      
   </bean>

 	  <bean id = "toUpper" class = "de.limago.springdemo.StringHelperImpl"  />
      
      <bean id = "stringHelper" class = "de.limago.springdemo.OtherStringHelperImpl"  />
   



</beans>